<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/glow_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/card_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lb_basic_card_info_time_margin"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.8"
                android:scrollY="-100dp"
                android:scrollX="100dp"
                android:paddingTop="-80px"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="-50px"
                android:background="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                tools:ignore="SmallSp"
                 />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/titleTextHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?rowHeaderStyle"
                android:layout_marginTop="@dimen/lb_basic_card_info_time_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/lb_basic_card_title_text_size"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

